    style.
      .c1 {
        background-color:red;
        width:100%;
        height:50px;
      }
      .c2 {
        background-color:green;
        width:100%;
        height:-webkit-calc(100% - 50px - 10%);
        height:-moz-calc(100% - 50px - 10%);
        height:-o-calc(100% - 50px - 10%);
        height:calc(100% - 50px - 10%);
        overflow: auto;
      }
      .c3 {
        background-color:blue;
        width:100%;
        height:10%;
      }
